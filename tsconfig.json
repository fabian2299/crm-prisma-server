{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "../dist"
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["**/*.ts"]
}
